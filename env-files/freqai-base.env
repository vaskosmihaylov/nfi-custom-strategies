# FreqAI Base Environment Configuration
# Used by docker-compose-freqai.yml

# FreqAI Core Settings
FREQTRADE__FREQAI__ENABLED=true
FREQTRADE__FREQAIMODEL=XGBoostRegressor

# API Configuration (Different port to avoid conflict with main setup)
FREQTRADE__API_SERVER__ENABLED=true
FREQTRADE__API_SERVER__LISTEN_IP_ADDRESS=0.0.0.0
FREQTRADE__API_SERVER__LISTEN_PORT=8081
FREQTRADE__API_SERVER__USERNAME=freqtrader
FREQTRADE__API_SERVER__PASSWORD=SuperSecretPassword123

# Bot Identification
FREQTRADE__BOT_NAME=QuickAdapter_FreqAI

# Trading Configuration - Inherits from main config, can override here
FREQTRADE__DRY_RUN=true
FREQTRADE__MAX_OPEN_TRADES=6
FREQTRADE__STAKE_CURRENCY=USDT

# Performance Settings for FreqAI
FREQTRADE__FREQAI__DATA_KITCHEN_THREAD_COUNT=10
FREQTRADE__FREQAI__FIT_LIVE_PREDICTIONS_CANDLES=600

# Model Management
FREQTRADE__FREQAI__TRAIN_PERIOD_DAYS=14
FREQTRADE__FREQAI__BACKTEST_PERIOD_DAYS=2
FREQTRADE__FREQAI__PURGE_OLD_MODELS=5